<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-start">
    <div class="btn-group" role="group" aria-label="button-group-pages">
      <div class="btn-group-vertical">
        <%= button_to('Vacations', all_vacations_path, method: :get, class: 'btn btn-outline-success mx-1 my-1') %>
        <%= button_to('Sidekiq Logs', sidekiq_logs_path, method: :get, class: 'btn btn-outline-success mx-1 my-1') %>
        <%= button_to('Flagged Tasks - Slack Test', flagged_tasks_path, method: :get, class: 'btn btn-outline-dark mx-1 my-1') %>

        <%= button_to('Check tasks against source', { action: 'db_task_cleaner' }, method: :post, class: 'btn btn-info mx-1 my-1') %>
        <%= button_to('Import tasks from JIRA', { action: 'retrieve_tasks' }, method: :post, class: 'btn btn-warning mx-1 my-1') %>
        <%= button_to('Delete all tasks', { action: 'destroy_all' }, method: :post, data: { confirm: 'Are you sure you want to delete all tasks?' }, class: 'btn btn-danger mx-1 my-1') %>
      </div>
    </div>
  </div>
</div>
