<div class="row">
  <% @categories.each do |category, feeds| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= category %></h5>
          <ul class="list-unstyled">
            <% feeds.each do |feed| %>
              <li>
                <a href="<%= feed[:url] %>" target="_blank"><%= feed[:title] %></a>
                <% if feed[:description] %>
                  <p><%= feed[:description] %></p>
                <% end %>
                <% if feed[:direct_url] %>
                  <a href="<%= feed[:direct_url] %>" target="_blank">Read more</a>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>