<div class="d-flex flex-wrap">
  <% @projects_with_active_tickets.each do |project| %>
    <div class="card mr-1 mb-1">
      <div class="card-body d-flex flex-column align-items-center">
        <ul class="list-unstyled mb-0">
          <% project.tasks.each do |task| %>
            <li>
              <span class="badge badge-secondary mr-2"><%= task.jira_id %></span>
              <strong><%= task.assignee.name.split.map { |word| word[0] }.join.upcase %></strong>
              <% if task.time_forecast.nil? || task.time_spent.nil? %>
                <span class="text-danger">No data</span>
              <% else %>
                <% remaining_time = task.time_forecast - task.time_spent %>
                <% if remaining_time < 0 %>
                  <span class="text-danger"><%= my_helper_format_duration(remaining_time) %></span>
                <% elsif remaining_time == 0 %>
                  <span class="text-warning"><%= my_helper_format_duration(remaining_time) %></span>
                <% else %>
                  <span class="text-success"><%= my_helper_format_duration(remaining_time) %></span>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>