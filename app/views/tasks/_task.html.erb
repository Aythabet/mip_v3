<div class="col">
  <div class="card card-task border-0 h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
      <div class="fw-bold text-muted">
        <%= task.status %>: <%= link_to task.jira_id, "https://agenceinspire.atlassian.net/browse/#{task.jira_id}", target: "_blank" %>
      </div>
      <div class="d-flex align-items-center">
        <span class="me-2"><%= task.priority %></span>
        <i class="bi bi-arrow-up"></i>
      </div>
    </div>
    <span class="badge badge-pill badge-dark"><%= task.epic %></span>
    <div class="card-body">
      <%= link_to task.assignee.name , task.assignee %>
      <h5 class="card-title"><%= link_to task.project.name, task.project %></h5>
      <p class="card-text">Time Estimation: <%= my_helper_format_duration(task.time_forecast) %></p>
      <p class="card-text">Time spent: <%= my_helper_format_duration(task.time_spent) %> </p>
      <p class="card-text">Summary: <%= task.summary %> </p>
      <% task.labels&.split&.each do |label| %>
        <span class="badge badge-pill badge-danger"><%= label.gsub(/[^a-zA-Z\s]/, '') %></span>
      <% end %>
    </div>
    <div class="card-footer bg-light">
      <small class="text-muted">
        Created at: <%= task.created_at %>
      </small>
    </br>
    <small class="text-muted">
      Updated at: <%= task.last_jira_update %>
    </small>
  </div>
</div>
</div>